	function cortarTextos(elemento, cantidad){
		var texto = "";
		texto = $(elemento).text();
		if(texto.length > cantidad){
			var sobras = $(elemento).text().substr(cantidad);
			if(sobras.length != 1 && sobras.length != 2){
				texto = texto.replace(sobras,"...");
				$(elemento).text(texto);
			}
		}
	}
